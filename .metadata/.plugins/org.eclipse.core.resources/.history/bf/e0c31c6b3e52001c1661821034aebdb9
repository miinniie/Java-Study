import java.util.List;
import java.util.Scanner;

public class SelectionTest2 {

	public SelectionTest2() {
		
		Scanner scan = new Scanner(System.in);
		System.out.printf("사원번호를 입력해주세요:");
		int num = Integer.parseInt(scan.nextLine());
		
		EmpDAO dao2 = new EmpDAO();
		List<EmpVO> list = dao2.allEmpSelect();
		
		
		for(EmpVO vo: list) {//확장된 for문으로 돌리기
			if(vo.getEmpno()==num) {
			System.out.printf(
					"사원번호->%d\n"
					+ "사원명->%s\n"
					+ "담담업무->%s\n"
					+ "금여->%3.0f\n"
					+ "보너스->%1.0f\n",
					vo.getEmpno(), vo.getEname(), vo.getJob(), 
					vo.getSal(), vo.getComm());
			}
		}
		
		
		/*
		 실행결과
		 사원번호: 1234
		 사원명 -> ___
		 담당업무->___
		 급여->____
		 보너스_>____
		 */
	}

	public static void main(String[] args) {
		new SelectionTest2();
	}

}
